<!--      <script src="js/bootstrap.min.js"></script>-->

      <script src='/fullcalendar/packages/core/main.js'></script>
      <script src='/fullcalendar/packages/interaction/main.js'></script>
      <script src='/fullcalendar/packages/daygrid/main.js'></script>
<div id="user" style="display:none"><%=sObj%></div>
      <script>



        document.addEventListener('DOMContentLoaded', function() {
          var calendarEl = document.getElementById('calendar');
          var obj = JSON.parse(document.getElementById("user").innerHTML);
          console.log(document.getElementById("user").innerHTML);

          var eventList = [];

          // create the event list for the calendar
          obj.events.forEach((event) => {
            eventList.push({
              title: event.eventname,
              start: event.startunix,
              end: event.endunix
            });
          });

          var curr = new Date();
          var formatted = curr.toISOString();
          console.log(eventList);

          var calendar = new FullCalendar.Calendar(calendarEl, {
            plugins: [ 'interaction', 'dayGrid' ],
            defaultDate: formatted,
            editable: true,
            eventLimit: false, // allow "more" link when too many events
            events: eventList
          });

          calendar.render();
        });

      </script>
    </div>
