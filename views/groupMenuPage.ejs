<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8">
  <title>Group Home Page</title>
  <!--Bootstrap & Icons-->
  <link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css"  media="screen,projection"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
  <body>
  <%-include("partials/navAndSidebar")-%>
    <h1>All Groups</h1>

    <div class="container-fluid">
      <% let counter = 0;%>
      <% let rowClosed; %>
      <% groups.forEach((group) => { %>
         <%# if we hit a 6th item, create a new row  %>
        <% if (counter % 4 == 0) { %>
        <div class="row justify-content-center">
          <% rowClosed = false; %>
        <% } %>
        <%# start of group card   %>
          <div class="col-sm">
            <div class="card mb-3" style="width: 18rem; height: 15rem">
              <div class="card-body">
                <h2 class="card-title"><%=group.group_name%></h2>
                <p class="card-text"><%=group.group_desc%></p>
                <form action="/groupMenuPage" method="post">
                  <input type="text" name="group_id" style="display:none" value=<%=group.group_id%>>
                  <input type="text" name="reqType" style="display:none" value= "groupMenuPage">
                  <button type="submit" style = "width: 100%" name="button" class="btn btn-primary btn-block">Join</button>
                </form>
              </div>
            </div>
          </div>
          <% if (counter % 4 == 3) {%>
            <% rowClosed = true %>
        </div>
          <%}%>
          <% counter++; %>
      <%});%>
    </div>

  <script type="text/javascript" src="/js/jquery-3.6.0.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js"></script>
  </body>
</html>
