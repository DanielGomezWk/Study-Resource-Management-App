<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Group Home Page</title>
    <!--Bootstrap & Icons-->
    <link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css"  media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="/css/daterangepicker.css"  media="screen,projection"/>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <!-- side & navbar -->
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #6200EE">
        <div class="container-fluid">
            <div class="d-flex justify-content-start">
                <!-- side bar toggler -->
                <button class="btn float-end" data-bs-toggle="offcanvas" data-bs-target="#offcanvas" role="button">
                    <i class="bi bi-list" style="color:#e8e8e8" data-bs-toggle="offcanvas" data-bs-target="#offcanvas"></i>
                </button>
                <a class="navbar-brand" href="#" style="color:#e8e8e8">
                    <!---
                      <i class="bi bi-house-fill" style="float:left; color:#e8e8e8"></i>
                    --->
                    Home
                </a>
            </div>
            <div class="d-flex justify-content-end">
                <a href="">
                    <i class="bi bi-geo-alt-fill" style="float:right; color:#e8e8e8"></i>
                </a>
                <a href="">
                    <i class="bi bi-bell-fill" style="float:right; color:#e8e8e8"></i>
                </a>
            </div>
        </div>
    </nav>
    <div class="offcanvas offcanvas-start w-25" tabindex="-1" id="offcanvas" data-bs-keyboard="false" data-bs-backdrop="false" style="max-width: 250px;margin-top:55px">
        <div class="offcanvas-header">
            <h6 class="offcanvas-title d-none d-sm-block" id="offcanvas">Menu</h6>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body px-0">
            <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-start" id="menu">
                <li class="nav-item">
                    <a href="#" class="nav-link text-truncate">
                        <i class="fs-5 bi-house"></i><span class="ms-1 d-none d-sm-inline">Home</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link text-truncate">
                        <i class="fs-5 bi-grid"></i><span class="ms-1 d-none d-sm-inline">Personal Information</span></a>
                </li>
                <li>
                    <a href="#" class="nav-link text-truncate">
                        <i class="fs-5 bi-people"></i><span class="ms-1 d-none d-sm-inline">Course History</span> </a>
                </li>
            </ul>
        </div>
    </div>
    <!-- End side & navbar -->

<!-- Title -->
<h1>Event Title: <%=obj.event.eventname%></h1>
<!-- Host info -->
<h1>Host: <%=obj.host.first%> <%=obj.host.last%>   Power Level: <%=obj.host.cubvotes%></h1>
<!-- Desc -->
<h2>Description: <%=obj.event.eventdesc%></h2>
<!-- Start and End times -->
<h1>Start Date: <%=obj.event.startdate%> End Date: <%=obj.event.enddate%></h1>
<h1>Start Time: <%=obj.event.starttime%> - End Time: <%=obj.event.endtime%></h1>
<h1>Attendees</h1>
    <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#inviteModal">Invite Members</button>

<div class="container-fluid">
    <% let counter = 0;%>
    <% let rowClosed; %>
    <% obj.attendees.forEach((user) => { %>
        <%# if we hit a 6th item, create a new row  %>
        <% if (counter % 4 == 0) { %>
        <div class="row justify-content-center">
            <% rowClosed = false; %>
            <% } %>
            <%# start of group card   %>
            <div class="col-sm">
                <div class="card mb-3" style="width: 25rem; height: 15rem">
                    <div class="card-body">
                        <h2 class="card-title"><%=user.first%> <%=user.last%> Power Level: <%=user.cubvotes%></h2>
                        <p class="card-text"><%=user.bio%></p>
<!--                        <form action="/groupMenuPage" method="post">-->
<!--                            <input type="text" name="group_id" style="display:none" value=>-->
<!--                            <button type="submit" style = "width: 100%" name="button" class="btn btn-primary btn-block">Join</button>-->
<!--                        </form>-->
                    </div>
                </div>
            </div>
            <% if (counter % 4 == 3) {%>
                <% rowClosed = true %>
        </div>
        <%}%>
        <% counter++; %>
    <%});%>
</div>

    <!-- Create Invite Modal -->
    <div class="modal fade" id="inviteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Send Invite</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id ="postReq" action = "/eventInviteUser" method = "post">
                        <div class="form-group fields">
                            <label for="exampleInputEmail1">Name of User</label>
                            <select class="form-control" name="userEmail">
                                <% obj.notInvited.forEach((person) =>{ %>
                                <option value="<%=person.email%>"><%=person.first%> <%=person.last%></option>
                                <%});%>
                            </select>
                        </div>
                        <div class="form-group" style = "display: none" style = "visibility: collapse">
                            <input id = "eventID" type="text" name = "eGroupID" class="form-control" value="<%=obj.event.eventid%>">
                        </div>

                        <button type="submit" class="btn btn-primary">Invite</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


</body>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js"></script>
</html>